<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:clipChildren="true">

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/othello_button"
        app:fabSize="mini"
        android:layout_marginBottom="230dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:backgroundTint="@color/whiteColor"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_mode_othello_black_24"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkerboard_button"
        app:fabSize="mini"
        android:layout_marginBottom="180dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:backgroundTint="@color/whiteColor"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_mode_checkerboard_black_24"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_button"
        app:fabSize="mini"
        android:layout_marginBottom="130dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:backgroundTint="@color/whiteColor"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_mode_level_black_24"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eye_button"
        app:fabSize="mini"
        android:layout_marginBottom="80dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:backgroundTint="@color/whiteColor"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_mode_eye_black_24"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add_black_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        app:layout_anchor="@+id/relativeLayout"
        app:layout_anchorGravity="center"
        app:srcCompat="@drawable/chessboard"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>